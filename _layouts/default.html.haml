---
layout: base
tab: to-be-defined
---
.header-bar
  //cannot use a partial as it loses the page.tab context :(
  #header
    %a#header-logo{:href=>'/'}
      %h1
        Ceylon
    #header-tagline
      %p
        Say more, more clearly
    #menu
      %ul#menu-core
        - idname = page.tab == "home" ? "selected" : "notselected"
        %li{ :id=>"#{idname}" }
          %a{ :href=>'/' } Home
        - idname = page.tab == "documentation" ? "selected" : "notselected"
        %li{ :id=>"#{idname}" }
          %a{ :href=>'/documentation/current' } Learn
        - idname = page.tab == "download" ? "selected" : "notselected"
        %li{ :id=>"#{idname}" }
          %a{ :href=>'/download' } Download
        - idname = page.tab == "community" ? "selected" : "notselected"
        %li{ :id=>"#{idname}" }
          %a{ :href=>'/community' } Community
        - idname = page.tab == "code" ? "selected" : "notselected"
        %li{ :id=>"#{idname}" }
          %a{ :href=>'/code' } Code
        - idname = page.tab == "blog" ? "selected" : "notselected"
        %li{ :id=>"#{idname}" }
          %a{ :href=>'/blog' } Blog
#banner
  #elephant
    &nbsp;
  #text
    &nbsp;
  #code
    <!-- lang: none -->
    %pre
      %code
        :preserve
          <span class="code_type">Html</span> html = <span class="code_type">Html</span> {
             <span class="code_type">Head</span> {
                title = <span class="code_string">"Ceylon: home page"</span>;
             };
             <span class="code_type">Body</span> {
                <span class="code_type">H2</span> ( <span class="code_string">"Welcome to Ceylon, &#96;&#96;</span>user.name<span class="code_string">&#96;&#96;!"</span> ),
                <span class="code_type">P</span> ( <span class="code_string">"Now get your code on :)"</span> )
             };
          };
#primary-content
  ~ content
.footer-bar
  = partial( 'footer.html.haml' )
